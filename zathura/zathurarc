#zoom
set zoom-step 20
map <C-n> zoom out
map <C-m> zoom in

#synctex
set synctex "true"
set synctex-editor-command "nvim +%{line} %{input}"


#copy to system clipboard
set selection-clipboard clipboard

#incremental search
set incremental-search "true"

#fonts (not text fonts)
set font "Jet Brains Mono 8"

#Open document in fit-width mode by default
#set adjust-open "width"

#use basename of the file in the window title

set window-title-basename "true"

#use basename of the file in the statusbar

set statusbar-basename "true"

%hide statusbar on launch

set guioptions none


## Colortheme tokyonight ##

set default-bg          "#1a1b26"
# set default-fg          "#c0caf5"
set recolor-darkcolor   "#c0caf5"  #text color when recolor
set recolor-lightcolor   "#1a1b26"  
set index-bg            "#1a1b26"
set index-fg						"#f7768e"
set index-active-bg     "#33467c"
set index-active-fg		  "#f7768e"
set statusbar-bg				"#7dcfff"
set statusbar-fg				"#414868"
set highlight-color			"#7aa2f7"
set highlight-active-color	"#f7768e"
set inputbar-bg					"#33467c"
set inputbar-fg					"#c0caf5"

#recolor
set recolor true
map i recolor
map <C-Space> toggle_statusbar
